<div class="row">
  <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
    <%= form_with model: @movie, remote: true do |f| %>
      <fieldset class="p-4" style="border: solid 1px black">
        <legend style="width: auto">Share a youtube video</legend>
        <div class="row form-group">
          <div class="col-4">
            <label>Youtube URL: </label>
          </div>
          <div class="col-8">
            <%= f.text_field :youtube_url, class: 'form-control' %>
          </div>
        </div>

        <div class="row form-group">
          <div class="col-8 offset-4">
            <%= f.submit 'Share', class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
